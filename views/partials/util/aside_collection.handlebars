			<div class="text_div">
				Collection settings
			</div>
		</button></a>
		{{/if}}
	</div>
	<div class="collection_members">
		<hr>
		<div class="collection_members_inner">
			{{#each page.collection.members}}
			<div class="member">
				<a href="/u/{{this.slug}}">
					<img class="member_img" src="/image/{{this.id}}">
				</a>
			</div>
			{{/each}}
		</div>
	</div>
</div>
