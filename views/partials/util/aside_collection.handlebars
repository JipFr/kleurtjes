	<div class="user_context">
		<h2>{{page.collection.title}}</h2>
		{{#if page.collection.description}}<p>{{page.collection.description}}</p>{{/if}}
	</div> 

	<div class="user_actions">
		{{#if is_admin}}
		<hr>
		<a href="/settings/"><button class="button_large">
			<div class="icon_div">
